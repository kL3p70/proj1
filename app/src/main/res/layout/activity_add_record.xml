<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chrisbennett.mylistview.AddRecord"
    android:background="#423741"
    android:elevation="1dp">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtReview"
        android:layout_below="@+id/textView6"
        android:background="#BCBAAF"
        android:textColor="#9E5C72"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtRating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSuccess"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/txtColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="#9E5C72" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hex:"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/txtHex"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtHex"
        android:layout_toStartOf="@+id/btnAdd"
        android:textSize="30dp"
        android:textColor="#9E5C72" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review:"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:layout_below="@+id/txtHex"
        android:layout_centerHorizontal="true"
        android:textColor="#9E5C72" />

    <EditText
        android:layout_height="40dp"
        android:id="@+id/txtHex"
        android:layout_below="@+id/txtColor"
        android:layout_alignParentEnd="true"
        android:layout_width="250dp"
        android:background="#9E5C72"
        android:textColor="#BCBAAF" />

    <EditText
        android:id="@+id/txtColor"
        android:layout_width="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#BCBAAF"
        android:layout_height="40dp"
        android:textColor="#9E5C72" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Review"
        android:id="@+id/btnAdd"
        android:layout_marginBottom="38dp"
        android:onClick="insertRecord"
        android:background="#9E5C72"
        android:textColor="#BCBAAF"
        android:layout_above="@+id/txtSuccess"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtRating"
        android:background="#9E5C72"
        android:layout_above="@+id/txtReviewer"
        android:textColor="#BCBAAF" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtReviewer"
        android:textColor="#9E5C72"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btnAdd"
        android:layout_alignParentStart="true"
        android:background="#BCBAAF" />

    <TextView
        android:text="/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReview"
        android:layout_toEndOf="@+id/btnAdd"
        android:id="@+id/textView8"
        android:layout_above="@+id/txtReviewer"
        android:background="#9E5C72"
        android:textColor="#BCBAAF"
        android:textSize="17sp" />

</RelativeLayout>
