<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chrisbennett.mylistview.MainActivity"
    android:background="#423741">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:background="#9E5C72"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="10dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADd"
            android:id="@+id/btnAdd"
            android:layout_below="@+id/btnView"
            android:layout_alignStart="@+id/btnView"
            android:layout_marginTop="88dp"
            android:onClick="addRecord"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="50dp"
            android:background="#423741"
            android:textColor="#C79E98" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View"
            android:id="@+id/btnView"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:onClick="viewRecords"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:background="#423741"
            android:textColor="#C79E98" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:background="#C79E98">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wat Do?"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textColor="#B2CDCE"
                android:textSize="50dp"
                android:textAlignment="center" />
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app is brought to you by Jesus Christ of Nazerith.                                          Jesus: Because other deities are bullshit."
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="#9E5C72" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ka-Ka-Ka-Kolars"
        android:fontFamily="Georgia"
        android:textSize="60dp"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:textColor="#423741"
        android:background="#9E5C72"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
